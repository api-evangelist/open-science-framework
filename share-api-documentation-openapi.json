    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "SHARE API Documentation",
        "description": "The SHARE API allows you to access all Research Release Events in the SHARE database and publish your organization's publications, data, repository holdings, or other research directly to SHARE.  The API has three endpoints.  \u201csearch,\u201d \u201cdata,\u201d and \u201cstats.\u201d  \u201csearch\u201d allows you to access information in SHARE, \u201cdata\u201d allows you to post to SHARE, and \u201cstats\u201d gives metrics on the different providers in SHARE.",
        "termsOfService": "http:\/\/exmple.com\/license\/"
    },
    "servers": [
        "http:\/\/osf.io\/api\/v1",
        "http:\/\/staging.osf.io\/api\/v1"
    ],
    "paths": {
        "\/share\/search": {
            "get": {
                "summary": "",
                "description": "Normalized SHARE Data from all content providers",
                "operationId": "",
                "deprecated": 0,
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Any valid Lucene query string matching the SHARE schema"
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "The starting index of the search. Indexing begins at 0.\nIf you set the size to 100, to page through the results,\nyou would increase your from by increments of 100. Defaults to 0.\n"
                    },
                    {
                        "name": "size",
                        "in": "query",
                        "description": "Determines the number of results returned at a time. Defaults to 10."
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Determines what value the results are sorted on.\nIf not provided, it defaults to sorting based on the relevance\nscore computed by Elasticsearch.\n"
                    },
                    {
                        "name": "v",
                        "in": "query",
                        "description": "Version of the metadata to retrieve. v=1 will retrieve an older version of the metadata, which currently powers the SHARE Search page."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "search response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "$href": "#\/components\/schemas\/searchResults"
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/share\/data": {
            "post": {
                "summary": "",
                "description": "POST endpoint for sending pre-formatted data to SHARE. Requires an API key - contact us at share-support@osf.io for more information. Note: Data will appear here after being pushed, but will not appear in the SHARE search endpoint immediately. Once you've been established as a provider, the data will be pulled into the SHARE search API on a nightly basis.",
                "operationId": "",
                "deprecated": 0,
                "parameters": []
            }
        }
    },
